<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <activeProfiles>
    <activeProfile>ci</activeProfile>
    <activeProfile>checkstyle</activeProfile>
  </activeProfiles>

  <servers>
    <server>
      <id>github</id>
      <username>${env.GITHUB_ACTOR}</username>
      <password>${env.GITHUB_TOKEN}</password>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>ci</id>

      <activation>
        <property>
          <name>env.CI</name>
        </property>
      </activation>

      <properties>
        <docker.publishRegistry.username>${env.DOCKER_REGISTRY_USER}</docker.publishRegistry.username>
        <docker.publishRegistry.password>${env.DOCKER_REGISTRY_PASSWORD}</docker.publishRegistry.password>
        <docker.publishRegistry.url>${env.DOCKER_REGISTRY}</docker.publishRegistry.url>
      </properties>

    </profile>
  </profiles>
</settings>